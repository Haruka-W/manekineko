<h1 class="subtitle is-1">新規会員登録ページ</h1>

<div class="box">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <p class="control has-icons-left">
      <%= f.text_field :name, autofocus: true, class: "input has-icons-left", placeholder: "氏名", autocomplete: "name" %>
      <span class="icon is-small is-left"> <i class="fas fa-user"></i> </span>
    </p>
  </div>

  <div class="field">
    <p class="control has-icons-left">
      <%= f.text_field :handle_name, autofocus: true, class: "input has-icons-left", placeholder: "ハンドルネーム", autocomplete: "handle_name" %>
      <span class="icon is-small is-left"> <i class="fas fa-user-circle"></i> </span>
    </p>
  </div>

  <div class="field">
    <p class="control">
      <%= f.label "住所" %>
      <div class="select">
      <%= f.select :prefecture, User.prefectures.keys, {} %>
      </div>
    </p>
  </div>

  <div class="field">
    <p class="control has-icons-left">
      <%= f.email_field :email, autofocus: true, class: "input has-icons-left", placeholder: "メールアドレス", autocomplete: "email" %>
      <span class="icon is-small is-left"> <i class="fas fa-envelope"></i> </span>
    </p>
  </div>

  <div class="field">
    <p class="control has-icons-left">
      <%= f.password_field :password, class: "input has-icons-left", placeholder: "パスワード(6文字以上)", autocomplete: "new-password" %>
      <span class="icon is-small is-left"> <i class="fas fa-lock"></i> </span>
    </p>
  </div>

  <div class="field">
    <p class="control has-icons-left">
      <%= f.password_field :password_confirmation, class: "input has-icons-left", placeholder: "パスワード(確認のため再度ご入力ください)", autocomplete: "new-password" %>
      <span class="icon is-small is-left"> <i class="fas fa-lock"></i> </span>
    </p>
  </div>

  <div class="actions">
    <%= f.submit "新規会員登録", class: "button is-success" %>
  </div>
<% end %>
</div>