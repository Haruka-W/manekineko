<h1 class="subtitle is-1 has-text-primary">募集詳細ページ</h1>

<div class="tile is-ancestor">
	<div class="tile is-parent">
		<!-- 画像表示 -->
		<div class="tile is-child box">
			<%= attachment_image_tag @invite, :image, :fill, 700, 450, fallback: "no_image.jpg" %>
			<hr>
			<!-- 募集情報 -->
			<p>[ 募集タイトル ]<br><%= @invite.title %></p>
			<p>[ 内容 ]<br><%= @invite.content %></p>
			<p>[ 猫情報 ]<br><%= @invite.sex %> ／ <%= @invite.age %> ／ <%= @invite.type %></p>
			<p>[ 募集開始日 ]<br><%= @invite.created_at.strftime('%Y/%m/%d') %></p>
			<!-- ログインしている会員の場合のみ編集と削除ボタンを表示 -->
			<% if @invite.user == current_user %>
			<hr>
			<%= link_to "内容を変更する", edit_invite_path(@invite), class: "button is-success" %>
			<%= link_to "この募集を削除する", invite_path(@invite), class: "button is-danger", method: :delete, data:{confirm: "本当に消しますか？"} %>
			<% end %>
		</div>
	</div>
	<div class="tile is-parent">
		<div class="tile is-child">
			<!-- 掲載者情報ここから -->
			<h4 class="subtitle is-3">掲載者情報</h4>
			<p>[ ハンドルネーム ]<br><%= link_to @invite.user.handle_name, user_path(@invite.user.id) %></p>
			<p>[ 自己紹介文 ]<br><%= @invite.user.profile %></p>
			<p>[ 住所 ]<br><%= @invite.user.prefecture %></p>
			<!-- 掲載者情報ここまで -->
			<hr>
			<!-- コメント欄ここから -->
			<h4 class="subtitle is-3">コメント欄</h4>
			<!-- コメントの表示 -->
			<ol>
				<% @invite.invite_comments.each do |invite_comment| %>
				<div class="comment">
					<div><%= invite_comment.comment %></div>
					<span class="is-size-7"><%= link_to invite_comment.user.handle_name, user_path(invite_comment.user.id) %></span>
					<span class="is-size-7"><%= invite_comment.created_at.strftime('%Y/%m/%d') %></span>
				</div>
				<% end %>
			</ol>
			<!-- コメント入力フォーム -->
			<%= form_for [@invite, @invite_comment] do |f| %>
			<%= f.text_area :comment, class: "textarea",placeholder: "掲載者への質問はこちらへ" %>
			<%= f.submit "コメントを送信する", class: "button is-info is-pulled-right" %>
			<% end %>
			<!-- コメント欄ここまで -->
		</div>
	</div>
</div>
