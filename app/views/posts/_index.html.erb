<div class="tile is-ancestor">
  <div class="tile is-parent">
	<% post.each do |post| %>
	  <div class="box is-one-quarter">
	  <div class=”tile is-child”>
		<%= attachment_image_tag post, :image, :fill, 283, 283, fallback: "no_image.jpg" %>
		<p>[ タイトル ]<br><%= link_to post.title, post_path(post) %></p>
		<p>[ 内容 ]<br><%= post.content %></p>
		<p>[ 猫情報 ]<br><%= post.sex %> ／ <%= post.age %> ／ <%= post.type %></p>
		<p>[ 投稿者 ]<br><%= link_to post.user.handle_name, user_path(post.user.id) %></p>
	  </div>
	  </div>
	<% end %>
  </div>
</div>
